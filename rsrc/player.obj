object "player" {
	draw {
  	fore="#FFFFFF"
  	symbol='@'
	}
  sensor "basic sense" {
	  sphere {
	    position=[0,0,0]
			radius=3
	  }
	}
	movement {
	  normal=true
	  wet=false
	}
	weight=125
	chomp="no" //nobody can chomp us!
	
	sensor "left eye" {
    frustum {
      position=[0,0,0]
      facing=[1,-1,0]
      xfov=1
      zfov=2
      near=0
      far=10
	  }
	}
	sensor "right eye" {
	  frustum {
	    position=[0,0,0]
	    facing=[1,1,0]
	    xfov=1
	    zfov=2
	    near=0
	    far=10
  	}
	}
